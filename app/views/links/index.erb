<h1>Links</h1>
<h2>Welcome <%= @email %>!</h2>

<ul id="links">
  <% @links.each do |link| %>
  <li>
    Title: <%= link.title %>
    <br>
    URL: <%= link.url %>
    <br>
    Tags: <%= link.tags.map(&:name).join(', ') %>
    <br>
  </li>
  <br>
  <% end %>
  <br>
  <a href="/links/new">Add a link here mate!</a>
</ul>
